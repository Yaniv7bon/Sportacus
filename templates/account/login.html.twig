{% extends 'base.html.twig' %}

{% block title %}Connexion au site
{% endblock %}

{% block body %}
	<div class="container">

		<div class="row">
			<div class="col-md-3">&nbsp;</div>
			<div class="col-md-6">
				<div class="bg-light py-3 px-3  mt-5">
					<h1>CONNEXION</h1>

                    {% if hasError %}
                      <div class="alert alert-danger">Email et/ou mot de passe invalide </div>
                    {% endif %}

					<form action="{{path("account_login")}}" method="post">
                    	<div class="form-group">
							<label for="email">Email</label>
							<input type="text" name="_username" id="email" class="form-control" placeholder="Entrez votre adresse email" value="{{username}}">
						</div>
						<div class="form-group">
							<label for="password">Mot de passe</label>
							<input type="password" name="_password" id="password" class="form-control" placeholder="Entrez votre mot de passe">
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary">SE CONNECTER</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
