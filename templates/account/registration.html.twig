{% extends 'base.html.twig' %}
{% block title %}
	Rejoignez-nous !
{% endblock %}

{% form_theme form _self %}

{% block body %}
	<div class="container">

		<div class="row">
			<div class="col-md-3">&nbsp;</div>
			<div class="col-md-6">
            <div class="bg-light py-3 px-3  mt-5">
					<h1>Rejoignez-nous !</h1>

					{{form_start(form)}}
					{{form_widget(form)}}
					<button type="submit" class="btn btn-primary">Je m'inscris !</button>
					{{form_end(form)}}
                    </div>
				</div>
			</div>
         
        </div>
    </div>

{% endblock %}

{% block form_row %}
<div class="form-group">
    {{form_label(form)}}
    {{form_widget(form)}}
</div>
{% endblock %}

